{
  "extends": ["plugin:github/recommended", "plugin:github/browser", "plugin:github/typescript", "prettier"],
  "rules": {
    "i18n-text/no-en": "off",
    "import/named": "off"
  },
  "ignorePatterns": ["/dist/"],
  "overrides": [
    {
      "files": "test/**/*.js",
      "env": {
        "mocha": true
      },
      "globals": {
        "assert": true
      },
      "rules": {
        "github/no-inner-html": "off"
      }
    },
    {
      "files": "*.js",
      "parser": "espree",
      "parserOptions": {"ecmaVersion": 8}
    }
  ]
}
