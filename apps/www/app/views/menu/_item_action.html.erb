<% id = options.fetch(:id) %>
<% action = options.fetch(:action) %>
<% icon = options.fetch(:icon) %>
<% text = options.fetch(:text) %>

<span
  role="menuitem"
  class="group flex cursor-pointer items-center px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50"
  tabindex="-1"
  id="<%= id %>"
  data-action="<%= action %>"
>
  <%= icon icon, class: 'mr-3 h-5 w-5 text-neutral-400 group-hover:text-neutral-500' %>
  <%= text %>
</span>
