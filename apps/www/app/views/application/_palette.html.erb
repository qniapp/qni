<div
  id="gate-carousel"
  class="fixed bottom-0 left-0 right-0 z-30 mx-6 mb-6 rounded-xl bg-white drop-shadow-xl md:hidden"
>
  <button type="button" aria-label="carousel left" class="absolute left-0 flex h-full flex-col justify-center">
    <%= icon :chevron_left, class: 'text-zinc-900' %>
  </button>
  <button type="button" aria-label="carousel right" class="absolute right-0 flex h-full flex-col justify-center">
    <%= icon :chevron_right, class: 'text-zinc-900' %>
  </button>

  <div class="flex flex-col items-center pt-6">
    <div class="flex w-full flex-row items-start gap-x-2 px-6">
      <h-gate class="operation-xl"></h-gate>
      <x-gate class="operation-xl"></x-gate>
      <y-gate class="operation-xl"></y-gate>
      <z-gate class="operation-xl"></z-gate>
    </div>

    <div class="flex flex-row gap-x-2 p-2">
      <div class="h-2 w-2 rounded-full bg-sky-500"></div>
      <div class="h-2 w-2 rounded-full bg-zinc-200"></div>
      <div class="h-2 w-2 rounded-full bg-zinc-200"></div>
      <div class="h-2 w-2 rounded-full bg-zinc-200"></div>
      <div class="h-2 w-2 rounded-full bg-zinc-200"></div>
    </div>
  </div>
</div>
