<div
  class="fixed top-0 left-0 z-40 rounded-br-2xl bg-white drop-shadow-xl"
  data-controller="menu"
  data-menu-active-class-value="bg-neutral-200"
>
  <div class="relative inline-block h-10 w-10 p-1 text-left">
    <button
      type="button"
      class="inline-flex h-full w-full items-center justify-center rounded-xl text-sm font-medium text-neutral-700 hover:bg-neutral-200 focus:outline-none"
      id="menu-button"
      aria-expanded="true"
      aria-haspopup="true"
      data-menu-target="button"
      data-action="click->menu#toggleDropdown"
    >
      <svg class="h-4 w-4" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M1.5 3C1.22386 3 1 3.22386 1 3.5C1 3.77614 1.22386 4 1.5 4H13.5C13.7761 4 14 3.77614 14 3.5C14 3.22386 13.7761 3 13.5 3H1.5ZM1 7.5C1 7.22386 1.22386 7 1.5 7H13.5C13.7761 7 14 7.22386 14 7.5C14 7.77614 13.7761 8 13.5 8H1.5C1.22386 8 1 7.77614 1 7.5ZM1 11.5C1 11.2239 1.22386 11 1.5 11H13.5C13.7761 11 14 11.2239 14 11.5C14 11.7761 13.7761 12 13.5 12H1.5C1.22386 12 1 11.7761 1 11.5Z"
          fill="currentColor"
          fill-rule="evenodd"
          clip-rule="evenodd"
        ></path>
      </svg>
    </button>

    <div
      class="absolute left-0 mt-2 hidden w-56 origin-top-right divide-y divide-neutral-100 overflow-hidden rounded-xl bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
      role="menu"
      aria-orientation="vertical"
      aria-labelledby="menu-button"
      tabindex="-1"
      data-menu-target="dropdown"
    >
      <%= menu_item_group do %>
        <%= menu_item_action id: 'menu-item-share', action: 'click->share#openModal', icon: :share, text: 'Share...' %>
      <% end %>
      <%= menu_item_group do %>
        <%= menu_item_link id: 'menu-item-github', href: 'https://github.com/qniapp/qni', icon: :github, text: 'GitHub' %>
        <%= menu_item_link id: 'menu-item-twitter', href: 'https://twitter.com/qniapp', icon: :twitter, text: 'Twitter' %>
      <% end %>
      <%= menu_item_group do %>
        <%=
          menu_item_action id: 'menu-item-clear-circuit',
                           action: 'click:quantum-simulator#clearCircuit',
                           icon: :trash,
                           text: 'Clear circuit'
        %>
      <% end %>
    </div>
  </div>
</div>
