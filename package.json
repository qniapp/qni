{
  "name": "@qni/monorepo",
  "private": true,
  "version": "0.0.1",
  "description": "Toy quantum simulator app.",
  "author": "@yasuhito",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qniapp/qni.git"
  },
  "license": "MIT",
  "workspaces": [
    "packages/common",
    "packages/simulator",
    "packages/elements",
    "apps/www",
    "apps/tutorial",
    "examples/elements-example"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -vti run build",
    "pretty-quick": "pretty-quick",
    "lint": "yarn workspaces foreach -vpi run lint",
    "g:eslint": "cd $INIT_CWD && eslint",
    "typecheck": "yarn workspaces foreach -vi run typecheck",
    "g:tsc": "cd $INIT_CWD && tsc",
    "test": "yarn workspaces foreach -vi run test",
    "test:ci": "yarn workspaces foreach -vi run test:ci",
    "publish:patch": "yarn build && yarn test && lerna publish",
    "docs": "yarn workspaces foreach -vpi run docs",
    "fix:style": "yarn run prettier ./packages/common/src --write && yarn run prettier ./packages/simulator/src --write && yarn run prettier ./packages/elements/src --write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "1.5.5",
    "esbuild": "^0.14.21",
    "eslint": "~8.9",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-github": "^4.3.5",
    "husky": "^7.0.4",
    "prettier": "2.2.0",
    "prettier-plugin-tailwindcss": "^0.1.5",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.6.3"
  },
  "packageManager": "yarn@3.2.0"
}
