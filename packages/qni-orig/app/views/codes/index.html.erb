<%= container do %>
  <p id="notice"><%= notice %></p>

  <h1 class="text-xl font-bold mt-8">Codes</h1>

  <div class="flex flex-col mt-4">
    <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
      <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
        <table class="table-fixed min-w-full">
          <thead>
            <tr>
              <th class="w-3/4 px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Title
              </th>
              <th class="px-6 py-3 border-b border-gray-200 bg-gray-50"></th>
              <th class="px-6 py-3 border-b border-gray-200 bg-gray-50"></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'components/code', collection: @codes %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="mt-8 border-t border-gray-200 pt-5">
    <div class="flex justify-end">
      <span class="button button--primary">
        <%= link_to 'New Code', new_code_path %>
      </span>
    </div>
  </div>
<% end %>
