<%= circuit nqubit: 2 do %>
  <%= circuit_step do %>
    <%= qubit_label '0x1' %>
    <%= qubit_label '0x2' %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 0 %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= hadamard_gate %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= hadamard_gate %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= phase_gate bit: 1, phi: 'π/4' %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= control_gate bit: 0, targets: [1], controls: [0] %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= not_gate bit: 1, controls: [0], targets: [1] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= phase_gate bit: 1, phi: '-π/4' %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= control_gate bit: 0, targets: [1], controls: [0] %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= not_gate bit: 1, controls: [0], targets: [1] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= phase_gate bit: 0, phi: 'π/4' %>
      <% end %>
    <% end %>
    <%= dropzone %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= phase_gate bit: 0, phi: 'π/2', targets: [0, 1] %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= phase_gate bit: 1, phi: 'π/2', targets: [0, 1] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
